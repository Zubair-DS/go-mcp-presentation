{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "go",
			"args": [
				"build",
				"-o",
				"leetcode-mcp-server",
				"main.go"
			],
			"group": "build",
			"problemMatcher": [
				"$go"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "run",
			"type": "shell", 
			"command": "go",
			"args": ["run", "main.go"],
			"group": "test",
			"problemMatcher": ["$go"],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "test-initialize",
			"type": "shell",
			"command": "bash",
			"args": [
				"-c",
				"echo '{\"jsonrpc\":\"2.0\",\"id\":1,\"method\":\"initialize\",\"params\":{}}' | ./leetcode-mcp-server"
			],
			"group": "test",
			"dependsOn": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "test-daily-challenge",
			"type": "shell",
			"command": "bash",
			"args": [
				"-c",
				"(echo '{\"jsonrpc\":\"2.0\",\"id\":1,\"method\":\"initialize\",\"params\":{}}'; echo '{\"jsonrpc\":\"2.0\",\"id\":2,\"method\":\"tools/call\",\"params\":{\"name\":\"get_leetcode_daily_challenge\",\"arguments\":{}}}') | ./leetcode-mcp-server"
			],
			"group": "test",
			"dependsOn": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"panel": "new"
			}
		}
	]
}